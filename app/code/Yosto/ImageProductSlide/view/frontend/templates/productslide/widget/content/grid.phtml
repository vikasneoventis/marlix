                        <div class="product-item-info" data-container="product-grid">
                            <?php
                            $productImage = $block->getImage($_item, $image);
                            $galleries = $block->getGalleryImages($_item->getEntityId());
                            if ($block->getEnable() == '1') {
                            ?>
                            <section class="slider">
                                <div class="flexslider">
                                    <a href="<?php echo $block->getProductUrl($_item) ?>" class="product photo product-item-photo" tabindex="-1">
                                        <ul class="slides">
                                            <?php
                                            $baseImage = "";
                                            $imgUrl = "";
                                            foreach ($galleries as $gallery)
                                            {
                                                if (strpos($block->getImage($_item, $image)->getImageUrl(), $gallery->getValue()) !== false) {
                                                    $baseImage = $productImage->getImageUrl();
                                                    $imgUrl = $gallery->getValue();
