        </button>
    </div>
<script>
    require([
        "jquery",
        "mage/calendar"
    ], function ($) {
        $("#date_from").calendar({
            buttonText: "<?php echo __('Select Date') ?>",
            dateFormat: "yyyy-mm-dd"
        });
        $("#revenue_day").click(function () {
            var currentUrl = '<?php echo $url ?>';
            currentUrl = currentUrl.replace(/day\/\d+\//,'');
            var newLocation = currentUrl+"day/"+ $('#date_from').val().replace(/-/g,'')+"/"
            setLocation(newLocation);
        });
        $("#today_revenue").click(function (){
            var currentUrl = '<?php echo $url ?>';
            currentUrl = currentUrl.replace(/day\/\d+\//,'');
            setLocation(currentUrl);
        });
    });
</script>