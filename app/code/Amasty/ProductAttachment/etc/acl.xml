<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <resource id="Amasty_ProductAttachment::config" title="Amasty Product Attachments" sortOrder="161801" />
                        </resource>
                    </resource>
                </resource>
                <resource id="Magento_Reports::report">
                    <resource id="Amasty_ProductAttachment::reports" title="Amasty Product Attachments Reports" sortOrder="161801">
                        <resource id="Amasty_ProductAttachment::downloads" title="Download Report" sortOrder="161801" />
                    </resource>
                </resource>
                <resource id="Magento_Catalog::catalog">
                    <resource id="Amasty_ProductAttachment::attachment" title="Amasty Product Attachments" sortOrder="161801" >
                        <resource id="Amasty_ProductAttachment::files_list" title="List Attachments" sortOrder="10" />
                        <resource id="Amasty_ProductAttachment::icon" title="Icon Managment" sortOrder="20" />
                        <resource id="Amasty_ProductAttachment::import" title="Mass File Import" sortOrder="30" />
                        <resource id="Amasty_ProductAttachment::copy" title="Copy Attachment" sortOrder="40" />
                        <resource id="Amasty_ProductAttachment::delete" title="Remove All Attachments" sortOrder="50" />
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>
