        <div data-role="width-slider"></div>
        <input data-role="width-input" name="<?= $namePrefix?>[width]" value="<?= $field->getData('width')?>" />
    </td>
    <td class="center middle checkbox-cell">
        <input type="checkbox" value="1" name="<?= $namePrefix?>[required]" <?= $field->getData('required') ? 'checked=checked' : ''?> />
