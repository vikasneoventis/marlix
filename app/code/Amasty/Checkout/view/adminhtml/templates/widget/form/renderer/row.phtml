<?php /** @var \Amasty\Checkout\Block\Adminhtml\Field\Edit\Group\Row\Renderer $block */ ?>
<?php $field = $block->getElement()->getData('field'); ?>
<?php $namePrefix = "field[{$field->getData('attribute_id')}]" ?>
<?php $isStoreSelected = $block->isStoreSelected() ?>
<tr>
    <td>
        <div class="draggable-handle"></div>
        <input type="hidden" name="<?= $namePrefix?>[id]" value="<?= $field->getId() ?>" />
        <input data-role="sort-order" type="hidden" name="<?= $namePrefix?>[sort_order]" value="<?= $field->getSortOrder() ?>" />
        <input data-role="enabled" type="hidden" name="<?= $namePrefix?>[enabled]" value="<?= $field->getEnabled() ?>" />
    </td>
    <td><?= __($field->getData('default_label')) ?></td>
