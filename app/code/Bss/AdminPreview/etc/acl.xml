<?xml version="1.0"?>
<!--
/**
 * BssCommerce
 * AdminPreview
 */
-->
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Magento_Customer::customer">
                    <resource id="Bss_AdminPreview::login" title="AdminPreview Login As Customer" sortOrder="50">
                        <resource id="Bss_AdminPreview::login_button" title="AdminPreview Login As Customer Button" sortOrder="10" />
                        <resource id="Bss_AdminPreview::login_log" title="AdminPreview Login As Customer Log" sortOrder="20" />
                    </resource>
                </resource>
                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <resource id="Bss_AdminPreview::config_section" title="Bss AdminPreview Section" />
                        </resource>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>
