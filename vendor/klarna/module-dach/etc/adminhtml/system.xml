<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="checkout">
            <group id="klarna_kco" type="text" sortOrder="100" showInDefault="1" showInWebsite="1" showInStore="1" translate="label">
                <field id="packstation_enabled" translate="label comment" type="select" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Packstation Enabled</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="prefill_notice" translate="label comment" type="select" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Customer pre-fill notice Enabled</label>
                    <source_model>Magento\Config\Model\Config\Source\Enabledisable</source_model>
                    <comment>Display a pre-fill notice to registered customer before submitting details to Klarna. The customer must accept the notice before continuing checkout.</comment>
                </field>
            </group>
        </section>
    </system>
</config>
